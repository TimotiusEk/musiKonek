<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/first_name__edit_profile_act"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="10dp"
                android:textColorHint="#b7b7b7"
                app:hintTextAppearance="@style/TextLabel">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Firstname"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="10dp"
                android:textColorHint="#b7b7b7"
                app:hintTextAppearance="@style/TextLabel">

                <EditText
                    android:id="@+id/last_name__edit_profile_act"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Lastname"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Gender"
                android:textColor="#cecece"
                android:textSize="17sp" />

            <Spinner
                android:id="@+id/gender_spinner__edit_profile_act"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/gender_arrays"
                android:popupBackground="#fff"
                android:spinnerMode="dropdown"
                android:theme="@style/PrimaryLine" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Instrumen Favorit"
                android:textColor="#cecece"
                android:textSize="17sp" />

            <ListView
                android:id="@+id/favourite_instrument_lv__edit_profile_act"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah Instrumen Lain"
                android:textSize="18sp"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="10dp"
                android:textColorHint="#c5c5c5"
                app:hintTextAppearance="@style/TextLabel">

                <EditText
                    android:id="@+id/address__edit_profile_act"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Unggah Foto"
                android:textColor="#cecece"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/show_uploaded_photo__edit_profile_act"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp" />

            <Button
                android:id="@+id/upload_btn__edit_profile_act"
                android:layout_width="120dp"
                android:layout_height="33dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_btn"
                android:text="Unggah"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/save_btn__edit_profile_act"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginTop="75dp"
                android:background="@drawable/round_btn"
                android:text="Terima"
                android:textColor="@android:color/white"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
