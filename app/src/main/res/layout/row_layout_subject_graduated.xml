<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/student_image__subject_graduated_rl"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/avatar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/how_many_courses__subject_graduated_rl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Paket 12 Kali Pertemuan"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/date_graduated__subject_graduated_rl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="selesai pada 17 Maret 2017"
                        android:textColor="#a8a8a8" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/background_img__subject_graduated_rl"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/guitar" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <TextView
                    android:id="@+id/show_kursus__subject_graduated_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kursus "
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/subject_name__subject_graduated_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/show_kursus__subject_graduated_rl"
                    android:text="GITAR"
                    android:textColor="@android:color/black" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_more_vert"
                    android:background="@android:color/transparent"
                    android:layout_alignParentRight="true"
                    android:id="@+id/show_popup_btn__subject_graduated_rl"
                    />

                <TextView
                    android:id="@+id/show_dengan__subject_graduated_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/show_kursus__subject_graduated_rl"
                    android:paddingTop="10dp"
                    android:text="DENGAN "
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/teacher_name__subject_graduated_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/show_kursus__subject_graduated_rl"
                    android:layout_toEndOf="@id/show_dengan__subject_graduated_rl"
                    android:paddingTop="10dp"
                    android:text="PAK DHANNY"
                    android:textColor="@android:color/black" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>