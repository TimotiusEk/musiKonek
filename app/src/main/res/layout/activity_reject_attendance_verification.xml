<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.timotiusek.musikonek.RejectAttendanceVerificationActivity"
    android:orientation="vertical"

    android:padding="20dp">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="10dp"
        android:textColorHint="#b7b7b7"
        app:hintTextAppearance="@style/TextLabel"

        >

        <EditText
            android:id="@+id/rejection_reason__reject_attendance_verification_act"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alasan Menolak"
            android:inputType="text"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:theme="@style/PrimaryLine"
            />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pertemuan"
        android:textColor="#b7b7b7"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="18sp"
        android:layout_weight="1"
        android:id="@+id/which_meeting__reject_attendance_verification_act"/>

    <Button
        android:id="@+id/save_btn__reject_attendance_verification_act"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_gravity="center_horizontal|bottom"
        android:background="@drawable/round_btn"
        android:text="Kirim"
        android:textColor="@android:color/white"
        />



</LinearLayout>
