<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/background_img__subject_existing_rl"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="fitXY"
                android:src="@drawable/guitar" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_below="@+id/background_img__subject_existing_rl"
                >

                <TextView
                    android:id="@+id/show_kursus__subject_existing_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kursus "
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/subject_name__subject_existing_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/show_kursus__subject_existing_rl"
                    android:text="GITAR"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/show_dengan__subject_existing_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/show_kursus__subject_existing_rl"
                    android:text="DENGAN "
                    android:paddingTop="10dp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/teacher_name__subject_existing_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PAK DHANNY"
                    android:paddingTop="10dp"
                    android:layout_below="@+id/show_kursus__subject_existing_rl"
                    android:layout_toEndOf="@id/show_dengan__subject_existing_rl"
                    android:textColor="@android:color/black"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_more_vert"
                    android:background="@android:color/transparent"
                    android:layout_alignParentRight="true"
                    android:id="@+id/show_popup_btn__subject_existing_rl"
                    />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>